<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.services.TackoutFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:background="@drawable/search_bg_color"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:background="@drawable/search"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/search"
                    android:lines="1"
                    android:paddingLeft="0dp"
                    android:background="@color/transparent"
                    android:layout_width="300dp"
                    android:hint="请输入搜索关键字"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <com.qgj.juan_05.ui.view.BannerView
            android:id="@+id/bannner"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>
   <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
       app:tabMode="scrollable"
       app:tabIndicatorColor="@color/pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/waimaiinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>